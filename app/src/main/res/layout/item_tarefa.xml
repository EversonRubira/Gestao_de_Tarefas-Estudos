<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/surface_glass"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/white_20"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Checkbox para marcar tarefa como concluÃ­da -->
        <CheckBox
            android:id="@+id/checkboxTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp" />

        <!-- InformaÃ§Ãµes da tarefa -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloTarefa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Projeto Final PAM"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_on_glass" />

            <TextView
                android:id="@+id/txtDisciplinaTarefa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ProgramaÃ§Ã£o de AplicaÃ§Ãµes MÃ³veis"
                android:textSize="12sp"
                android:textColor="@color/text_secondary_glass"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Badge de prioridade -->
                <TextView
                    android:id="@+id/txtPrioridadeTarefa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alta"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:background="@color/priority_high"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginEnd="8dp" />

                <!-- Data de entrega -->
                <TextView
                    android:id="@+id/txtDataEntregaTarefa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… 12 Jan 2026"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_glass" />

            </LinearLayout>

        </LinearLayout>

        <!-- Ãcone de opÃ§Ãµes -->
        <ImageView
            android:id="@+id/imgOpcoesTarefa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="@string/options"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
