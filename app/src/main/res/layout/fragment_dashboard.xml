<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_full">

    <!-- Gradiente no bottom para transiÃ§Ã£o suave -->
    <View
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_bottom_fade" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:paddingBottom="12dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Dashboard"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="10dp" />

        <!-- Featured Task Card - Compacto -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_featured_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/surface_glass"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/accent"
            app:strokeWidth="1.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header compacto -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â­ PrÃ³xima Tarefa"
                    android:textColor="@color/text_on_glass"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Task Content -->
                <LinearLayout
                    android:id="@+id/layout_task_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_featured_task_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Projeto Final PAM"
                        android:textColor="@color/text_on_glass"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_featured_task_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“š ProgramaÃ§Ã£o de AplicaÃ§Ãµes MÃ³veis"
                        android:textColor="@color/text_secondary_glass"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_featured_task_priority"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alta"
                            android:textSize="10sp"
                            android:textColor="@android:color/white"
                            android:background="@color/priority_high"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_featured_task_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“… AmanhÃ£"
                            android:textColor="@color/text_secondary_glass"
                            android:textSize="11sp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_view_task"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:text="Ver"
                            android:textSize="11sp"
                            android:minWidth="50dp"
                            app:cornerRadius="6dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Empty State -->
                <TextView
                    android:id="@+id/tv_no_featured_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nenhuma tarefa pendente ðŸŽ‰"
                    android:textAlignment="center"
                    android:textColor="@color/text_secondary_glass"
                    android:textSize="12sp"
                    android:padding="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Row: Stats Cards (lado a lado) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="8dp">

            <!-- Tasks Overview Card (Compacto) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                app:cardBackgroundColor="@color/surface_glass"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/white_20"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âœ… Tarefas"
                        android:textColor="@color/text_on_glass"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Feitas"
                            android:textColor="@color/text_secondary_glass"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_completed_tasks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/success"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pendentes"
                            android:textColor="@color/text_secondary_glass"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tv_pending_tasks_dashboard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/warning"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Study Time Card (Compacto) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardBackgroundColor="@color/surface_glass"
                app:cardCornerRadius="14dp"
                app:cardElevation="6dp"
                app:strokeColor="@color/white_20"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ˆ Top Disciplinas"
                        android:textColor="@color/text_on_glass"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Lista de tempo por disciplina (max 3 itens, gerada dinamicamente) -->
                    <LinearLayout
                        android:id="@+id/layout_study_time_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Itens serÃ£o adicionados dinamicamente aqui (mÃ¡ximo 3) -->

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Top Disciplinas com Mini GrÃ¡fico de Barras (Full Width) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_top_disciplinas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:minHeight="140dp"
            app:cardBackgroundColor="@color/surface_glass"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/white_20"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header do Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š"
                        android:textSize="18sp"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GrÃ¡fico de Estudos"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Container para as barras dinÃ¢micas -->
                <LinearLayout
                    android:id="@+id/container_chart_bars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- As barras serÃ£o adicionadas dinamicamente aqui -->

                </LinearLayout>

                <!-- Mensagem quando nÃ£o hÃ¡ dados -->
                <TextView
                    android:id="@+id/tv_no_chart_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nenhuma sessÃ£o de estudo registrada ainda"
                    android:textColor="@color/text_secondary_glass"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Calendar Card (Compacto) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/surface_glass"
            app:cardCornerRadius="14dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/white_20"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Header + Controls em uma linha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/tv_mes_ano"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Janeiro 2025"
                        android:textColor="@color/text_on_glass"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btn_mes_anterior"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_media_previous"
                        android:contentDescription="MÃªs anterior"
                        android:scaleType="fitCenter"
                        android:padding="2dp" />

                    <ImageButton
                        android:id="@+id/btn_proximo_mes"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_media_next"
                        android:contentDescription="PrÃ³ximo mÃªs"
                        android:scaleType="fitCenter"
                        android:padding="2dp" />

                </LinearLayout>

                <!-- Dias da semana -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="1dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="D"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="S"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="T"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Q"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Q"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="S"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="S"
                        android:textAlignment="center"
                        android:textColor="@color/text_secondary"
                        android:textSize="8sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Grid de dias (serÃ¡ preenchido dinamicamente) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_calendario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    </ScrollView>

</FrameLayout>
