<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_full"
    tools:context=".RegisterActivity">

    <!-- Overlay escuro -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_overlay"
        android:alpha="0.3" />

    <!-- Container principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Logo ou título -->
            <TextView
                android:id="@+id/txtLogoRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestão de Tarefas"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtSubtituloRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crie sua conta"
                android:textSize="16sp"
                android:textColor="@color/white_80"
                android:layout_marginBottom="32dp" />

            <!-- Card de registro com glassmorphism -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/surface_glass">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrar"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_on_glass"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="24dp" />

                    <!-- Campo de Nome -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilNomeRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nome completo"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                        app:startIconTint="@color/primary"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtNomeRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:textColor="@color/text_on_glass"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo de Email -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmailRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="E-mail"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_dialog_email"
                        app:startIconTint="@color/primary"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtEmailRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/text_on_glass"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo de Senha -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSenhaRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Senha (mínimo 6 caracteres)"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_lock_lock"
                        app:startIconTint="@color/primary"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/primary"
                        android:layout_marginBottom="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtSenhaRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@color/text_on_glass"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Campo de Confirmar Senha -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilConfirmarSenhaRegistro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirmar senha"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:startIconDrawable="@android:drawable/ic_lock_lock"
                        app:startIconTint="@color/primary"
                        app:endIconMode="password_toggle"
                        app:endIconTint="@color/primary"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtConfirmarSenhaRegistro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:textColor="@color/text_on_glass"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botão de Registrar -->
                    <Button
                        android:id="@+id/btnRegistrar"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Criar Conta"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_on_accent"
                        android:backgroundTint="@color/accent"
                        app:cornerRadius="12dp"
                        android:elevation="4dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Divisor -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Link para login -->
                    <TextView
                        android:id="@+id/txtIrParaLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Já tem uma conta? Entrar"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
