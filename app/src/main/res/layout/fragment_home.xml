<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_full">

    <!-- Gradiente no bottom para transiÃ§Ã£o suave -->
    <View
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_bottom_fade" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="24dp">

            <!-- Header: Greeting com botÃ£o de logout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <!-- SaudaÃ§Ã£o -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bom dia!"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Pronto para estudar?"
                        android:textColor="@color/white_80"
                        android:textSize="16sp"
                        android:shadowColor="#60000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="3" />

                </LinearLayout>

                <!-- BotÃ£o de Logout -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btn_logout"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@color/surface_glass"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:strokeColor="@color/white_20"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_lock_power_off"
                        android:tint="@color/accent"
                        android:contentDescription="Sair" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Spacer para empurrar cards para baixo -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Main Stats Grid - Cards menores -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginBottom="12dp">

                <!-- First Row: Total Subjects + Pending Tasks -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp">

                    <!-- Total Subjects Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        android:minHeight="85dp"
                        app:cardBackgroundColor="@color/surface_glass"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="5dp"
                        app:strokeColor="@color/white_20"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“š"
                                android:textSize="26sp" />

                            <TextView
                                android:id="@+id/tv_total_subjects"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="0"
                                android:textColor="@color/primary"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Disciplinas"
                                android:textAlignment="center"
                                android:textColor="@color/text_on_glass"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Pending Tasks Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        android:minHeight="85dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="6dp"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/gradient_orange_accent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“"
                                android:textSize="26sp" />

                            <TextView
                                android:id="@+id/tv_pending_tasks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="0"
                                android:textColor="@color/text_on_accent"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:shadowColor="#40000000"
                                android:shadowDx="0"
                                android:shadowDy="1"
                                android:shadowRadius="2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="Pendentes"
                                android:textAlignment="center"
                                android:textColor="@color/text_on_accent"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Second Row: Study Time Today (Full Width) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="85dp"
                    app:cardBackgroundColor="@color/surface_glass"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="5dp"
                    app:strokeColor="@color/white_20"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â±ï¸"
                            android:textSize="26sp" />

                        <TextView
                            android:id="@+id/tv_study_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="0h 00m"
                            android:textColor="@color/primary"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Estudado Hoje"
                            android:textAlignment="center"
                            android:textColor="@color/text_on_glass"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
