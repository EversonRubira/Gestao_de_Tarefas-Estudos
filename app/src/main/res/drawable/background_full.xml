<?xml version="1.0" encoding="utf-8"?>
<!-- Background com imagem bonita e overlay leve para legibilidade -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Camada 1: Imagem de fundo bonita -->
    <item>
        <bitmap
            android:src="@drawable/background_image"
            android:gravity="center"
            android:tileMode="disabled" />
    </item>

    <!-- Camada 2: Overlay leve (25%) para garantir legibilidade do texto -->
    <!-- VocÃª pode ajustar a opacidade alterando o valor (#40 = 25%, #66 = 40%, #80 = 50%) -->
    <item>
        <shape>
            <solid android:color="#40000000"/>
        </shape>
    </item>

</layer-list>
