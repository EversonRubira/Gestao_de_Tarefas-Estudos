<?xml version="1.0" encoding="utf-8"?>
<!-- Background completo com overlay escuro -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Imagem de fundo -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#4A6FA5"
                android:centerColor="#5B7C99"
                android:endColor="#3D5A75"
                android:type="linear"/>
        </shape>
    </item>
    <!-- Overlay escuro 80% -->
    <item>
        <shape>
            <solid android:color="@color/background_overlay"/>
        </shape>
    </item>
</layer-list>
