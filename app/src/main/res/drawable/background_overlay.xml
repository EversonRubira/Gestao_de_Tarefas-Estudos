<?xml version="1.0" encoding="utf-8"?>
<!-- Layer list que combina a imagem de fundo com overlay semitransparente -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradiente de fundo (fallback caso não tenha imagem) -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#667eea"
                android:centerColor="#764ba2"
                android:endColor="#f093fb"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Imagem de fundo (será adicionada) -->
    <!-- Descomente quando adicionar a imagem background_image.jpg na pasta drawable
    <item>
        <bitmap
            android:src="@drawable/background_image"
            android:gravity="center"
            android:scaleType="centerCrop"/>
    </item>
    -->

    <!-- Overlay escuro para melhorar legibilidade -->
    <item>
        <shape>
            <solid android:color="#40000000"/>
        </shape>
    </item>

    <!-- Gradiente adicional para dar profundidade -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#00000000"
                android:endColor="#60000000"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>
